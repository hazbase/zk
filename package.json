  },
  "devDependencies": {
    "@types/circomlibjs": "^0.1.6",
    "@types/node": "^22.15.17",
    "@types/snarkjs": "^0.7.9",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist",
    "assets",
    "README.md",
    "LICENSE"
